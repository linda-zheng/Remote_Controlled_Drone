    <style name="ButtonGray" parent="ButtonStyle">
        <item name="android:textColor">@color/text_black_75</item>
        <item name="android:background">@drawable/button_gray_selector</item>
    </style>

    <style name="ButtonWhite" parent="ButtonStyle">
        <item name="android:textColor">@color/text_black_75</item>
        <item name="android:background">@drawable/button_white_small_selector</item>
    </style>

    <style name="ButtonClear" parent="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="ButtonGreen.Small">
        <item name="android:maxHeight">36dp</item>
        <item name="android:textSize">@dimen/text_size_large_small_action</item>
