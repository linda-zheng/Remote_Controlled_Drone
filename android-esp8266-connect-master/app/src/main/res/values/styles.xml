    <style name="TextButtonStyle" parent="BorderlessButtonStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextButtonStyle.Gray" parent="TextButtonStyle">
        <item name="android:background">@drawable/button_text_selector</item>
    </style>

    <style name="SmallTextButtonStyle" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:background">@drawable/button_text_selector</item>
